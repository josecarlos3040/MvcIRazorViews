@model List<MvcRazorViews.ViewModels.EstudanteViewModel>


@{
    ViewData["Title"] = "Lista Estudantes";
}

<h1>Estudantes</h1>

@if(Model.Count == 0 )
{
    <p>Nenhum estudante cadastrado</p>
    <input type="submit" value="Cadastre um estudante">

}

else
{
    <p>NÃºmero de estudantes cadastrados: @Model.Count</p>
    
    @foreach(var estudante in Model)
    {
        <a href="/Estudante/Show/@estudante.Id">
        <h3>@estudante.Nome</h3>
        </a>

        <p>@estudante.Endereco</p>
        @if(estudante.Ativo)
    {
        <input type="submit" value="Iniciar Conversa">
    }
    
    <hr>


    }



    
}